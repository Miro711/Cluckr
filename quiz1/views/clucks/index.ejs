            <div class="card-body">
                <h5 class="card-title"><%= cluck.username %> Â· <%= cluck.created_at %></h5>
                <p class="card-text"><%= cluck.content %></p>
                <% if (cluck.image_url) { %>
                <img class="small-image" src="<%= cluck.image_url %>" alt="Image Link Broken" width="auto" height="300">
                <% } %>
            </div>
        </div>
    <% } %>
</div>

