<h1><%= @product.title %></h1>
<p>Description: <%= @product.description %></p>
<p>Price: <%= number_to_currency(@product.price) %></p>
<p>Sold by: <%= @product.user&.full_name || 'DELETED USER' %></p>

<% if can? :destroy, @product %>
  <%= link_to "Delete Product", product_path(@product), method: :delete, data: { confirm: 'Are you sure that you want to delete this product?' } %>
<% end %>
<% if can? :edit, @product %>
  <%= link_to "Edit Product", edit_product_path(@product) %>
<% end %>

<%= form_with model: [@product, @review], local: true do |f| %>
  <% if @review.errors.present? %>
    <p>
      <%= @review.errors.full_messages.join(', ') %>
    </p>
  <% end %>
  <div>
    <%= f.label :rating %>
    <%= f.number_field :rating, in: 1..5 %>
  </div>
  <div>
    <%= f.label :body %>
    <%= f.text_area :body %>
  </div>
  <%= f.submit %>
<% end %>

<h3>Reviews</h3>
<%#
  Display all of the reviews for this product
%>
<% @reviews.each do |review| %>
  <div>
    <h3>Rating: <%= review.rating %></h3>
    <p>
      <%= review.body %>
    </p>
    <p>Reviewed by: <%= review.user&.full_name || 'DELETED USER' %></p>
    <% if can? :crud, review %>
      <%= link_to 'Delete', review_url(review.id), method: :delete, data: { confirm: 'Are you sure that you want to delete this review?' } %>
    <% end %>
  </div>
<% end %>
